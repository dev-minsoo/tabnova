{
  "manifest_version": 3,
  "name": "TabNova",
  "version": "1.0.0",
  "description": "A simple and intuitive vertical tab manager.",
  "permissions": [
    "sidePanel",
    "tabs",
    "contextMenus",
    "management"
  ],
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Tabnova",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+B",
        "mac": "Alt+B"
      }
    }
  }
}